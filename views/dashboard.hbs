<h3>Welcome {{name}}</h3>


{{#if stories }}
    

    <table class="striped">

        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>

            </tr>
        </thead>

        <tbody>
            {{#each stories}}
                <tr>
                    <td>
                        <!-- this _id is know fo every story as we type story._id-->
                        <a href="/stories/{{_id}}">{{title}}</a>
                    </td>
                    <td>{{createdAt}}</td>
                    <td><span class="dash-status"> {{status}}</span></td>
                </tr>

            {{/each}}
        </tbody>


    </div>



{{else}}

<p>You havent cteated any stories yet</p>
{{/if}}